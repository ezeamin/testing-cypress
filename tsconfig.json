{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./cypress/*"]
    }
  },
  "include": ["cypress"],
  "display": "Recommended",
  "$schema": "https://json.schemastore.org/tsconfig"
}
